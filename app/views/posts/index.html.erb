<% if @posts.any? %>

  <% if user_signed_in? %>
  <%= link_to "+ New Post", new_post_path, class: "new-post-button"%> 
  <ol>
    <% @posts.each do |post| %>
      <li>
        <%= post.user.email %> <br>
        at: <%= post.created_at%> <br>
        <%= post.body%>
      </li>
    <% end %>
  </ol>
  <% else %>
    <% @posts.each do |post| %>
      <li>
        <%= post.body%>
      </li>
    <% end %>
  <% end %>

<% else %>
  <p>No Posts available.</p>
<% end %>

